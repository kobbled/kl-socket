%ifndef socket_t
%define socket_t

CONST
  -- TAG status constants
	TAG_UNDEFIND =  1 -- an 'undefined' TAG
	TAG_DEFINED  =  2 -- a 'defined' TAG
	TAG_STARTED  =  3 -- a 'started' TAG

TYPE

  T_SOCKET FROM socket = STRUCTURE
    connected  :  BOOLEAN
    status     :  INTEGER
    port       :  INTEGER
    ip         :  STRING[13]
    number  :  INTEGER
    tag  :  STRING[3]
    env  :  STRING[13]
  ENDSTRUCTURE

%endif --socket_t
